<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

        <script type="text/javascript" src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.6.4.js")"></script>

        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Site.css")" />

        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="">
                    <p class="site-title">@Html.ActionLink("ASP.NET Mobile", "Index", "Home")</p>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
            </div>
        </footer>

        @RenderSection(name: "Scripts", required: false)
    </body>
</html>

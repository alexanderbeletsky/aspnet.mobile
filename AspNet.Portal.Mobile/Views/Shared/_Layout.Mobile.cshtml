<!DOCTYPE html> 
<!-- manifest="@Url.RouteUrl("cache.manifest")" -->
<html>
    <head> 
        <meta charset="utf-8" />

        <title>@ViewBag.Title - Mobile</title> 
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/Content/jquery.mobile-1.0b3.min.css" />
        <link rel="stylesheet" href="~/Content/Site.Mobile.css" />
        <script type="text/javascript" src="~/Scripts/jquery-1.6.4.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.mobile-1.0b3.js"></script>
        <script type="text/javascript" src="~/Scripts/knockout-2.0.0.js"></script>
        <script type="text/javascript" src="~/Scripts/underscore.js"></script>
        <script type="text/javascript" src="~/Scripts/App/CacheInit.js"></script>
        <script type="text/javascript" src="~/Scripts/App/GetQueryParam.js"></script>
        <script type="text/javascript" src="~/Modes/Online.js"></script>

    </head> 
<body> 

    <div class="page" data-role="page" data-theme="b">
        <div data-role="header" data-position="inline">
            @RenderSection("header", false)
            <h1>@ViewBag.Title</h1>
        </div>

        <div data-role="content">
            @RenderSection("featured", false)
            @RenderBody()		
        </div>

    </div>
    
    @RenderSection(name: "Scripts", required: false)

</body>
</html>